@model IEnumerable<Front.Models.Respuestas.MateriaFront>

@{
    ViewData["Title"] = "Materias";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="input-group" style="max-width: 300px;">
        <span class="input-group-text"><i class="bi bi-search"></i></span>
        <input type="text" id="searchInput" class="form-control" placeholder="Buscar...">
        <button class="btn btn-outline-secondary btn-sm ms-2" style="height:38px; padding:2px 10px;">
            <i class="bi bi-funnel"></i> Filtro
        </button>
    </div>
    <div>
        <a href="@Url.Action("UpdateMateria", "Materia")" class="btn btn-success">Modificar</a>
        <a href="@Url.Action("CreateMateria", "Materia")" class="btn btn-success">Crear</a>
    </div>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-secondary">
        <tr>
            <th>Materia</th>
            <th>Año</th>
            <th>Modalidad</th>
            <th style="width:100px;">Acciones</th>
        </tr>
    </thead>
    <tbody id="materiaTable">
        @foreach (var materia in Model)
        {
            <tr>
                <td>@materia.Nombre</td>
                <td>@materia.Anio</td>
                <td>@materia.Modalidad</td>
                <td class="text-center">
                    <button type="button" class="btn btn-sm btn-info" onclick="infoMateria('@materia.Nombre')">
                        <i class="bi bi-info-circle"></i>
                    </button>

                    <button class="btn btn-sm btn-danger" onclick="deleteMateria('@materia.Nombre')">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="materiaModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNombre"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Horarios:</strong> <span id="modalHorarios"></span></p>
                <p><strong>Profesor/es:</strong> <span id="modalProfesores"></span></p>
                <p><strong>Año:</strong> <span id="modalAnio"></span></p>
                <p><strong>Modalidad:</strong> <span id="modalModalidad"></span></p>
            </div>
        </div>
    </div>
</div>


<script src="/js/materias.js"></script>